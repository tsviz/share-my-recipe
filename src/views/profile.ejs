<%- include('partials/header') %>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .profile-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        overflow: hidden;
        margin: 2rem auto;
        max-width: 1200px;
    }
    
    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 2rem 4rem;
        position: relative;
        overflow: hidden;
    }
    
    .profile-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" patternUnits="userSpaceOnUse" width="100" height="100"><circle cx="25" cy="25" r="2" fill="white" opacity="0.05"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.03"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    }
    
    .profile-img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 4px solid rgba(255, 255, 255, 0.3);
        object-fit: cover;
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        position: relative;
        z-index: 2;
        margin: 0 auto 1.5rem;
        display: block;
    }
    
    .profile-info {
        text-align: center;
        position: relative;
        z-index: 2;
    }
    
    .profile-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    
    .profile-bio {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 1.5rem;
    }
    
    .stats-container {
        background: linear-gradient(135deg, #f8f9ff 0%, #e6f3ff 100%);
        padding: 2rem;
        margin: 2rem;
        border-radius: 16px;
    }
    
    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.1);
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }
    
    .stat-card:hover {
        transform: translateY(-3px);
        border-color: rgba(102, 126, 234, 0.2);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
    }
    
    .stat-number {
        font-size: 2.2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
        display: block;
    }
    
    .stat-label {
        font-size: 0.9rem;
        color: #6c757d;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
        font-size: 1.4rem;
        font-weight: 600;
        color: #495057;
        padding: 0 2rem;
    }
    
    .section-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .recipe-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid rgba(102, 126, 234, 0.1);
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        position: relative;
    }
    
    .recipe-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .recipe-img {
        height: 200px;
        object-fit: cover;
        width: 100%;
    }
    
    .recipe-content {
        padding: 1.5rem;
    }
    
    .recipe-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(102, 126, 234, 0.9);
        color: white;
        border-radius: 15px;
        padding: 0.25rem 0.75rem;
        font-size: 0.8rem;
        font-weight: 600;
    }
    
    .recipe-rating-btn {
        position: absolute;
        top: 8px;
        left: 8px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 50%;
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        cursor: pointer;
        z-index: 5;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
    }
    
    .recipe-rating-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.5);
    }
    
        /* Ensure Bootstrap dropdowns appear above all content */
        .dropdown-toggle {
            z-index: 1055 !important;
        }
        
        .dropdown-menu {
            z-index: 1060 !important;
        }    .recipe-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.75rem;
    }
    
    .recipe-desc {
        color: #6c757d;
        margin-bottom: 1rem;
        line-height: 1.5;
    }
    
    .btn-main {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 20px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-main:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        color: white;
    }
    
    .btn-outline {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
        border-radius: 20px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-outline:hover {
        background: #667eea;
        color: white;
        transform: translateY(-2px);
    }
    
    .no-recipes {
        text-align: center;
        padding: 3rem 2rem;
        color: #6c757d;
    }
    
    .no-recipes i {
        font-size: 4rem;
        color: #667eea;
        opacity: 0.5;
        margin-bottom: 1rem;
        display: block;
    }
    
    @media (max-width: 768px) {
        .profile-container {
            margin: 1rem;
            border-radius: 16px;
        }
        
        .profile-title {
            font-size: 2rem;
        }
        
        .stat-number {
            font-size: 1.8rem;
        }
        
        .profile-header {
            padding: 2rem 1rem 3rem;
        }
        
        .stats-container {
            margin: 1rem;
            padding: 1.5rem;
        }
        
        .section-title {
            padding: 0 1rem;
        }
    }
</style>

<div class="container">
    <div class="profile-container">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="profile-info">
                <% if (user.profile_image) { %>
                    <img src="/users/<%= user.id %>/profile-image" alt="<%= user.username %>" class="profile-img">
                <% } else { %>
                    <div class="profile-img d-flex align-items-center justify-content-center" style="background: rgba(255,255,255,0.2); font-size: 3rem;">
                        <i class="bi bi-person-circle"></i>
                    </div>
                <% } %>
                
                <h1 class="profile-title"><%= user.username %></h1>
                <% if (user.bio) { %>
                    <p class="profile-bio"><%= user.bio %></p>
                <% } else { %>
                    <p class="profile-bio">Food enthusiast sharing amazing recipes!</p>
                <% } %>
                
                <% if (isOwnProfile) { %>
                    <a href="/profile/edit" class="btn-main">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </a>
                <% } %>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="stats-container">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="stat-card">
                        <span class="stat-number"><%= recipes.length %></span>
                        <div class="stat-label">Recipes Shared</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <span class="stat-number"><%= totalFavorites || 0 %></span>
                        <div class="stat-label">Total Favorites</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <span class="stat-number"><%= userFavorites ? userFavorites.length : 0 %></span>
                        <div class="stat-label">Liked Recipes</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recipes Section -->
        <div class="section-title">
            <div class="section-icon">
                <i class="bi bi-journal-plus"></i>
            </div>
            <span>
                <% if (isOwnProfile) { %>
                    My Recipes
                <% } else { %>
                    <%= user.username %>'s Recipes
                <% } %>
            </span>
        </div>

        <div class="px-4 pb-4">
            <% if (recipes.length === 0) { %>
                <div class="no-recipes">
                    <i class="bi bi-journal-plus"></i>
                    <% if (isOwnProfile) { %>
                        <h4>No recipes yet</h4>
                        <p class="text-muted mb-3">Start sharing your culinary creations!</p>
                        <a href="/recipes/new" class="btn-main">
                            <i class="bi bi-plus-circle"></i>Create First Recipe
                        </a>
                    <% } else { %>
                        <h4><%= user.username %> hasn't shared any recipes yet</h4>
                        <p class="text-muted">Check back later for delicious recipes!</p>
                    <% } %>
                </div>
            <% } else { %>
                <div class="row">
                    <% recipes.forEach(recipe => { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="recipe-card">
                                <div class="position-relative">
                                    <button class="recipe-rating-btn" onclick="goToRatings('<%= recipe.id %>')" title="Rate this recipe">
                                        <i class="bi bi-star-fill"></i>
                                    </button>
                                    <img src="https://picsum.photos/400/200?random=<%= recipe.id %>" 
                                         class="recipe-img" alt="<%= recipe.title %>"
                                         onerror="this.src='data:image/svg+xml;base64,'; this.onerror=null;">
                                    <% if (recipe.category_name) { %>
                                        <div class="recipe-badge"><%= recipe.category_name %></div>
                                    <% } %>
                                </div>
                                <div class="recipe-content">
                                    <h5 class="recipe-title"><%= recipe.title %></h5>
                                    <p class="recipe-desc">
                                        <%= recipe.description ? recipe.description.substring(0, 100) + (recipe.description.length > 100 ? '...' : '') : 'A delicious recipe to try!' %>
                                    </p>
                                    <div class="d-flex gap-2">
                                        <a href="/recipes/<%= recipe.id %>?page=<%= isOwnProfile ? 'profile' : 'user-profile' %>&userId=<%= user.id %>" class="btn-main">
                                            <i class="bi bi-eye"></i>View Recipe
                                        </a>
                                        <% if (isOwnProfile) { %>
                                            <a href="/recipes/edit/<%= recipe.id %>" class="btn-outline">
                                                <i class="bi bi-pencil"></i>Edit
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>

        <!-- Navigation -->
        <div class="text-center p-4" style="border-top: 1px solid rgba(102, 126, 234, 0.1);">
            <a href="/dashboard" class="btn-outline me-2">
                <i class="bi bi-house"></i>Dashboard
            </a>
            <a href="/recipes" class="btn-main">
                <i class="bi bi-collection"></i>Browse Recipes
            </a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
