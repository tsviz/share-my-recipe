<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <% if (messages.success) { %>
            <div class="alert alert-success">
                <%= messages.success %>
            </div>
        <% } %>
        <% if (messages.error) { %>
            <div class="alert alert-danger">
                <%= messages.error %>
            </div>
        <% } %>
        <h1 class="mb-4 text-center">Create a New Recipe</h1>
        <form action="/recipes" method="POST" class="mx-auto" style="max-width: 500px;">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label for="cuisine" class="form-label">Cuisine</label>
                <select class="form-select" id="cuisine" name="cuisine" required>
                    <option value="">Select a cuisine</option>
                    <% if (cuisines) { cuisines.forEach(cui => { %>
                        <option value="<%= cui %>"><%= cui %></option>
                    <% }) } %>
                </select>
            </div>
            <div class="mb-3">
                <label for="instructions" class="form-label">Instructions</label>
                <textarea class="form-control" id="instructions" name="instructions" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-main w-100">Create Recipe</button>
        </form>
        <div class="text-center mt-4">
            <a href="/dashboard" class="btn btn-lg back-home-button">
                <i class="bi bi-speedometer2 me-2"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <style>
        .back-home-button {
            background: linear-gradient(90deg, #ffb347 0%, #ffcc33 100%);
            color: white;
            padding: 10px 20px;
            border-radius: 30px;
            font-weight: bold;
            box-shadow: 0 4px 15px rgba(255, 179, 71, 0.4);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            border: none;
        }
        
        .back-home-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(255, 179, 71, 0.6);
            color: white;
        }
        
        .back-home-button::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transform: translateX(-100%);
        }
        
        .back-home-button:hover::after {
            animation: shine 1.5s infinite;
        }
        
        @keyframes shine {
            to {
                transform: translateX(100%);
            }
        }
    </style>
    
    <!-- Bootstrap JavaScript Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
