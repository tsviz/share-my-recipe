classDiagram
    class Users {
        +id
        +username
        +email
        +password
        +created_at
        +updated_at
        +is_active
        +last_login
        +bio
        +profile_image
    }

    class Recipes {
        +id
        +title
        +description
        +user_id
        +cuisine
        +category_id
        +instructions
        +search_vector
        +embedding
    }

    class Ingredients {
        +id
        +name
    }

    class RecipeIngredients {
        +recipe_id
        +ingredient_id
        +quantity
    }

    class Categories {
        +id
        +name
    }

    class Sessions {
        +id
        +user_id
        +data
        +created_at
        +expires
    }

    class Favorites {
        +id
        +user_id
        +recipe_id
        +created_at
    }

    Users "1" --> "*" Recipes : owns
    Recipes "1" --> "*" RecipeIngredients : contains
    RecipeIngredients "*" --> "1" Ingredients : includes
    Recipes "*" --> "1" Categories : categorized as
    Users "1" --> "*" Sessions : has
    Users "1" --> "*" Favorites : saves
    Favorites "*" --> "1" Recipes : references